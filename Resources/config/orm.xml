<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zuo_like.model.like_topic.class">Zuo\LikeBundle\Entity\LikeTopic</parameter>
        <parameter key="zuo_like.model.liker.class">Zuo\LikeBundle\Entity\Liker</parameter>

        <parameter key="zuo_like.manager.like_topic.default.class">Zuo\LikeBundle\Entity\LikeTopicManager</parameter>
        <parameter key="zuo_like.manager.liker.default.class">Zuo\LikeBundle\Entity\LikerManager</parameter>
    </parameters>

    <services>
        <service id="zuo_like.manager.like_topic.default" class="%zuo_like.manager.like_topic.default.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%zuo_like.model.like_topic.class%</argument>
        </service>
        <service id="zuo_like.manager.liker.default" class="%zuo_like.manager.liker.default.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%zuo_like.model.liker.class%</argument>
        </service>
    </services>

</container>